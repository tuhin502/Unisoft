@model ANOMS.Models.Promotion
@{
    ViewBag.Title = "Promotion";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    th {
        color: white;
    }

    tr, td {
        text-align: center;
    }

    label {
        color: black;
    }
</style>

@using (Html.BeginForm("Promotions_Config", "Order", FormMethod.Post))
{
    <form class="form-group">
        <h3 class="text-center p-3 text-white" style="background:#023e8a;">Promotions</h3>
        <div class="jumbotron">

            <div class="form-row" style="margin-top:-35px;">
                <div class="form-group col-md-6">
                    <label for="input">To</label>

                    @Html.DropDownListFor(model => model.n_ID, ViewBag.typeList as SelectList, "--Select One--", new { @class = "form-control", required = "true" })

                </div>
                <div class="form-group col-md-6">
                    <label for="input">Validity</label>
                    @Html.EditorFor(model => model.validity, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter your Message", type = "datetime-local", required = "true" } })
                  
                </div>

            </div>

            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="input">Message</label>
                    @Html.EditorFor(model => model.n_msg, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter your message", type = "text", required = "true", style = "height:80px" } })
                    @*<textarea typeof="text" class="form-control" style="height:100px;" placeholder="Enter Your Message" required></textarea>*@

                </div>
            </div>


            <div class="text-center mt-4">
                <button class="btn btn-primary w-25 " type="submit" id="submitbtn">Send</button>
                <br />
                @if (@TempData["AlertMessage"] != null)
                {
                    <p style="color:red;text-align:center;" data-dismiss="alert">@TempData["AlertMessage"]</p>

                }
            </div>

        </div>
    </form>
}
<link href="~/Content/Order/promotions.css" rel="stylesheet" />
<h4 class="text-center text-white p-1" style="background:#55a630;margin-top:-20px;">Message List</h4>
<div class="" style="margin-top:-7px;">
    <table class="table">
        <thead>
            <tr id="header">
                <th scope="col">TO</th>
                <th scope="col">Message</th>
                <th scope="col">Validity</th>
                @*<th scope="col">Action</th>*@

            </tr>


        </thead>
     @foreach (var item in ViewBag.list)
     { 
            if (item.n_ID ==1)
            {
                <tbody>
                    <tr>
                        <td scope="row">@item.n_Type</td>
                        <td>@item.n_msg</td>
                        <td>@item.validity</td>
                        @*<td><form action="/Order/Promotion_Delete" method="post" style="border:none;margin-left:3px; " id="">
                                <input type="submit" class="btn btn-danger" value="Delete" style="font-size:10px;" />
                                <input type="hidden" name="id" value="@item.ntfn_ID" />
                            </form></td>*@
                    </tr>


                </tbody>
         }
         else
         {

         }
     }
    </table>

</div>